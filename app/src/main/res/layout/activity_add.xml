<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <TextView
            android:id="@+id/adda_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/add_a_new_card"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black70"
            android:textSize="16sp"
            android:layout_below="@id/adda_txt"
            android:text="@string/enter_the_card_details" />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:padding="10dp"
            android:background="@drawable/back_btn_ripple"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel3"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <EditText
            android:id="@+id/card_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/card_name"
            android:maxLength="20"
            android:textCursorDrawable="@drawable/back_cursor"
            android:textColorHint="@color/black30"
            android:textColorHighlight="@color/black30"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <View
            android:id="@+id/card_name_line"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@+id/card_name_edittext"
            android:layout_marginTop="3dp"
            android:background="@drawable/back_line_error"/>
        <TextView
            android:id="@+id/card_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_name_line"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/red"
            android:text="0/20"
            android:textSize="12sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel4"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/card_color"
            android:textColor="@color/black70"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <View
                    android:id="@+id/round_select_green"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        android:layout_gravity="center">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/green_card"/>

                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <View
                    android:id="@+id/round_select_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black30"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        android:layout_gravity="center">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blue_card"/>

                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <View
                    android:id="@+id/round_select_red"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black30"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        android:layout_gravity="center">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/red_card"/>

                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <View
                    android:id="@+id/round_select_pink"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black30"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        android:layout_gravity="center">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/pink_card"/>

                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <View
                    android:id="@+id/round_select_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black30"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        android:layout_gravity="center">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/yellow_card"/>

                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <View
                    android:id="@+id/round_select_torquoise"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black30"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        android:layout_gravity="center">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/turquoise_card"/>

                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <View
                    android:id="@+id/round_select_orange"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black30"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        android:layout_gravity="center">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/orange_card"/>

                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel1"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/barcode_type"
            android:textColor="@color/black70"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/qr_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:textAlignment="center"
                android:text="@string/qr"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/ean13_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:paddingEnd="10dp"
                android:textAlignment="center"
                android:text="@string/ean13"
                android:textColor="@color/black30"/>
            <TextView
                android:id="@+id/code128_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textAlignment="center"
                android:text="@string/code128"
                android:textColor="@color/black30" />
            <TextView
                android:id="@+id/other_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:paddingEnd="10dp"
                android:textAlignment="center"
                android:text="@string/pdf417"
                android:textColor="@color/black30" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel2"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <EditText
            android:id="@+id/barcode_data_edittext"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/barcode_data"
            android:maxLength="32"
            android:textCursorDrawable="@drawable/back_cursor"
            android:textColorHint="@color/black30"
            android:textColorHighlight="@color/black30"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <View
            android:id="@+id/barcode_data_line"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@+id/barcode_data_edittext"
            android:layout_marginTop="3dp"
            android:background="@drawable/back_line_error"/>
        <TextView
            android:id="@+id/barcode_data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/barcode_data_line"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:text="0/32"
            android:layout_marginTop="5dp"
            android:textColor="@color/red"
            android:textSize="12sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:paddingStart="50dp"
        android:paddingTop="20dp"
        android:paddingEnd="50dp"
        android:paddingBottom="20dp"
        android:text="@string/save"
        android:textColor="@color/black"
        android:textSize="18sp" />
</RelativeLayout>